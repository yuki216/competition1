# Iteration 3 - reCAPTCHA Integration & Observability Environment Variables

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/auth_service?sslmode=disable

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h
REFRESH_TOKEN_SALT=your-refresh-token-salt-change-this-in-production

# reCAPTCHA Configuration (Iteration 3)
RECAPTCHA_ENABLED=true
RECAPTCHA_SECRET=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_TIMEOUT=5s
RECAPTCHA_SKIP=false

# Redis Configuration (Iteration 3)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting Configuration (Iteration 3)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_IP_ATTEMPTS=10
RATE_LIMIT_USER_ATTEMPTS=5
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_BLOCK_DURATION=30m

# Logging Configuration (Iteration 3)
LOG_FORMAT=json
LOG_LEVEL=info
LOG_REQUEST_RESPONSE=true
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# Environment
ENVIRONMENT=development

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ENABLED=true